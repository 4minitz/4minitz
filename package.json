{
  "name": "4minitz",
  "version": "0.3.0",
  "description": "Simply the best app for taking minutes!  ;-)",
  "main": "4minitz.html",
  "directories": {
    "doc": "doc",
    "test": "test"
  },
  "scripts": {
    "test": "npm run test:unit",
    "test:ci": "npm run test:unit && npm run test:integration:headless && npm run test:end2end:headless",

    "test:unit": "node ./node_modules/mocha/bin/mocha ./tests/unit/**/*.js --compilers js:babel-register --require tests/unit/babel",

    "test:integration": "npm run test:integration:browser",
    "test:integration:headless": "meteor test --once --driver-package dispatch:mocha-phantomjs --port 3200",
    "test:integration:browser": "meteor test --driver-package practicalmeteor:mocha --port 3200",

    "test:end2end:server": "meteor run --port 3100 --settings ./settings-test-end2end.json",
    "test:end2end:headless": "chimp --ddp=http://localhost:3100 --mocha --path=tests/end2end/ --browser=phantomjs", 
    "test:end2end:once": "chimp --ddp=http://localhost:3100 --mocha --path=tests/end2end/",
    "test:end2end:watch": "chimp --ddp=http://localhost:3100 --mocha --path=tests/end2end/ --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/4minitz/4minitz.git"
  },
  "author": "4minitz Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/4minitz/4minitz/issues"
  },
  "homepage": "https://github.com/4minitz/4minitz#readme",
  "dependencies": {
    "fibers": "^1.0.13",
    "git-rev-sync": "^1.5.1",
    "meteor-node-stubs": "^0.2.3",
    "mongo-uri": "^0.1.2"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.6.0",
    "babel-register": "^6.8.0",
    "chai": "^3.5.0",
    "mocha": "^2.4.5",
    "proxyquire": "^1.7.7",
    "sinon": "^1.17.4",
    "sinon-chai": "^2.8.0",
    "underscore": "^1.8.3"
  }
}
