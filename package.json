{
  "name": "4Minitz",
  "version": "0.5.0",
  "description": "Simply the best app for taking minutes!  ;-)",
  "main": "4minitz.html",
  "directories": {
    "doc": "doc",
    "test": "test"
  },
  "scripts": {
    "test": "npm run test:unit",
    "test:ci": "npm run test:unit && npm run test:integration:headless && npm run test:end2end:headless",
    "test:unit": "node ./node_modules/mocha/bin/mocha ./tests/unit/**/*.js --compilers js:babel-register --require tests/unit/babel",
    "test:integration": "npm run test:integration:browser",
    "test:integration:headless": "meteor test --once --driver-package dispatch:mocha-phantomjs --port 3200",
    "test:integration:browser": "meteor test --driver-package practicalmeteor:mocha --port 3200",
    "test:end2end:server": "meteor run --port 3100 --settings ./settings-test-end2end.json",
    "test:end2end:headless": "chimp --ddp=http://localhost:3100 --mocha --path=tests/end2end/ --browser=phantomjs -- $TEST_FILES",
    "test:end2end:once": "chimp --ddp=http://localhost:3100 --mocha --path=tests/end2end/",
    "test:end2end:watch": "chimp --ddp=http://localhost:3100 --mocha --path=tests/end2end/ --watch",
    "postinstall": "cp -R ./node_modules/bootstrap/dist/fonts ./public/ && rm -rf ./node_modules/eonasdan-bootstrap-datetimepicker/node_modules"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/4minitz/4minitz.git"
  },
  "author": "4minitz Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/4minitz/4minitz/issues"
  },
  "homepage": "https://github.com/4minitz/4minitz#readme",
  "dependencies": {
    "arrive": "^2.3.1",
    "babel-plugin-transform-runtime": "^6.9.0",
    "babel-preset-stage-3": "^6.5.0",
    "bootstrap-material-design": "^0.5.10",
    "eonasdan-bootstrap-datetimepicker": "github:eonasdan/bootstrap-datetimepicker#4.17.37",
    "fibers": "^1.0.13",
    "git-rev-sync": "^1.5.1",
    "jquery": "^2.1.4",
    "jquery-ui": "github:jquery/jquery-ui#1.12.0",
    "jquery-ui-touch-punch": "^0.2.3",
    "meteor-node-stubs": "^0.2.3",
    "moment": "^2.13.0",
    "mongo-uri": "^0.1.2",
    "mongodb": "^2.2.5",
    "node-getopt": "^0.2.3",
    "randomstring": "^1.1.5",
    "faker": "^3.1.0"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.6.0",
    "babel-register": "^6.8.0",
    "chai": "^3.5.0",
    "mocha": "^2.4.5",
    "proxyquire": "^1.7.7",
    "sinon": "^1.17.4",
    "sinon-as-promised": "^4.0.0",
    "sinon-chai": "^2.8.0",
    "underscore": "^1.8.3"
  }
}
