{
    "parser": "@babel/eslint-parser",
    "env": {
        "browser": true,
        "es6": true,
        "node": true,
        "mocha": true,
        "jasmine": true
    },
    "globals": {
        "server": true,
        "browser": true
    },
    "extends": ["eslint:recommended", 
        "plugin:prettier/recommended"
    ],
    "plugins": ["prettier"],  
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "linebreak-style": [
            "error",
            "unix"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-useless-escape": ["off"],
        "no-console": ["off"],
        "prettier/prettier": ["error"]
    }
}